# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=your-secret-key-here-change-in-production
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Model Paths
MODEL_PATH_YOLO=models/yolo_v1_kk_map886.pt
MODEL_PATH_UNET=models/unet_kk_cleaner_v1.pt

# VLM Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TIMEOUT=900
GEMINI_MAX_RETRIES=3

# YOLO Configuration
YOLO_CONFIDENCE_THRESHOLD=0.7
YOLO_INPUT_SIZE=640
YOLO_DEVICE=cuda

# U-Net Configuration
UNET_INPUT_SIZE=256
UNET_DEVICE=cuda
UNET_BATCH_SIZE=8

# Performance Configuration
MAX_FILE_SIZE_MB=10
MAX_PROCESSING_TIME_SECONDS=120
ENABLE_GPU=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_PII_SCRUBBING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Environment
ENVIRONMENT=development
DEBUG=false

